<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd" default-lazy-init="true" default-autowire="byName">
	
	<!-- singleton作用域,Spring IOC容器中只会存在一个共享的bean实例 -->
	<bean id="contextUtils" class="org.framework.support.spring.ContextUtils" scope="singleton"/>
</beans>